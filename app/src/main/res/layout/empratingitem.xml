<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
    <TextView
        android:id="@+id/ratingcat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="16dp"
        android:background="#FFFFFF"
        android:paddingHorizontal="10dp"
        android:textColor="#004C86"
        android:gravity="center|right"
        />
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:gravity="center"
    android:orientation="vertical"
    >


    <com.borjabravo.simpleratingbar.SimpleRatingBar
        android:id="@+id/simple_rating_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:isIndicator="false"
        app:ratingCount="6"
        android:rotationY="180"
        app:rating="0"
        android:layout_gravity="center"
        app:ratingFilled="@drawable/star_sel"
        app:ratingEmpty="@drawable/star_un"
        app:ratingSize="30dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:gravity="center"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/lb6"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:text="ممتاز"
            android:textSize="11dp"
            android:textColor="#000000"
            android:gravity="center"
            />
        <TextView
            android:id="@+id/lb5"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:text="جيد جداً"
            android:textSize="11dp"
            android:textColor="#000000"
            android:gravity="center"
            />
        <TextView
            android:id="@+id/lb4"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:text="جيد"
            android:textSize="11dp"
            android:textColor="#000000"
            android:gravity="center"
            />
        <TextView
            android:id="@+id/lb3"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:text="مقبول"
            android:textSize="11dp"
            android:textColor="#000000"
            android:gravity="center"
            />
        <TextView
            android:id="@+id/lb2"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:text="ضعيف"
            android:textSize="11dp"
            android:textColor="#000000"
            android:gravity="center"
            />
        <TextView
            android:id="@+id/lb1"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:text="سيء"
            android:textSize="11dp"
            android:textColor="#000000"
            android:gravity="center"
            />

    </LinearLayout>

</LinearLayout>

</LinearLayout>