<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TaskDetailsActivity"
    android:orientation="vertical"
    android:weightSum="5">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
    android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"

        >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="20dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/close"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:background="@drawable/close"
            android:elevation="12dp"
            android:layout_gravity="right"
            />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:gravity="right"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="20dp"
        android:layout_gravity="center"

        android:orientation="horizontal"
        android:weightSum="5"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_weight="5"
            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/remtxt"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="متبقي 4 ايام"
                android:textColor="#EAB011"
                android:textSize="17dp"
                android:paddingHorizontal="10dp"
                android:gravity="center|right"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"

                android:gravity="center">

                <TextView
                    android:id="@+id/attatext"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_weight="5"
                    android:text="12:00 pm"
                    android:gravity="right|center"
                    android:textColor="#59000000"

                    />
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="20dp"
                    android:layout_weight="1"
                    android:src="@drawable/time"

                    />
                <TextView
                    android:id="@+id/datetext"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_weight="3"
                    android:text="20/3/2021"
                    android:gravity="right|center"
                    android:textColor="#59000000"

                    />
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="20dp"
                    android:layout_weight="1"
                    android:src="@drawable/calender"

                    />

            </LinearLayout>


    </LinearLayout>
  <ImageView
      android:id="@+id/timeremin"
      android:layout_width="40dp"
      android:layout_height="40dp"
      />


    </LinearLayout>

<TextView
    android:layout_width="match_parent"
    android:layout_height="1dp"
    android:background="#59CACCCE"
    android:layout_marginHorizontal="20dp"
/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
android:text="كتابة تقرير"
        android:textSize="17dp"
        android:textColor="#004C86"
        android:paddingRight="20dp"
        android:paddingTop="10dp"
        />


    <TextView
        android:id="@+id/desctxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="يرجى كتابة تقرير الخاص بنظام شريك ورفعة عن طريق يرجى كتابة تقرير الخاص بنظام شريك ورفعة عن طريق الايميل ليتم الارسال الي المدراء"
        android:textSize="15dp"
        android:background="@drawable/grayroundbtn"
        android:textColor="#000000"
        android:layout_marginHorizontal="20dp"
        android:paddingTop="10dp"
        android:gravity="center|right"
        android:padding="10dp"
        android:layout_marginTop="10dp"
        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:orientation="horizontal"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="15dp"
        android:gravity="right|center">

        <TextView
            android:id="@+id/attachtxt"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="#0066CC"
            android:textSize="15dp"
            android:paddingHorizontal="10dp"
            android:text="تحميل 1 مرفق"
            />

    <ImageView
        android:layout_width="15dp"
        android:layout_height="20dp"
        android:background="@drawable/attach"
        />


    </LinearLayout>



    <LinearLayout
        android:id="@+id/extendtime"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/bluetaskborder"
        android:gravity="right|center"
        android:weightSum="5">
        <ImageView
            android:id="@+id/max1"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/drop"
            />
        <TextView
            android:layout_weight="5"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="#0066CC"
            android:textSize="15dp"
            android:paddingHorizontal="10dp"
            android:gravity="center|right"
            android:text="طلبات تمديد وقت التسليم"
            />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/labmax1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="10dp"
        android:orientation="vertical"
        android:visibility="gone"
        android:layout_marginHorizontal="20dp"
        android:background="@drawable/bluetaskborder"
        android:gravity="right|center"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="#80000000"
            android:textSize="12dp"
            android:paddingHorizontal="10dp"
            android:gravity="center"
            android:text="فرص تمديد تاريخ التسليم هي فرصتان وسيتم حساب تاريخ التسليم تلقائياً"            />



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:paddingHorizontal="10dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/whiteround"
            android:layout_marginHorizontal="10dp"
>
            
            <Button
                android:id="@+id/sendtime1"
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:text="تقديم طلب"
                android:textColor="#ffffff"
                android:textSize="12dp"
                android:background="@drawable/grayroundbtn"
android:enabled="false"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="right"
                android:background="@drawable/whiteround"
                >
                <TextView
                    android:layout_weight="5"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textColor="#0066CC"
                    android:textSize="15dp"
                    android:paddingHorizontal="10dp"
                    android:gravity="center|right"
android:text="الفرصة الاولى"
                    />

                <TextView
                    android:layout_weight="5"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textColor="#80000000"
                    android:textSize="12dp"
                    android:paddingHorizontal="10dp"
                    android:gravity="center|right"
                    android:text="سيحسب نصف التاريخ الاساسي وسيتم اضافة تلقائياً"
                    />



            </LinearLayout>



        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:paddingHorizontal="10dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/whiteround"
            android:layout_marginHorizontal="10dp"
            >

            <Button
                android:id="@+id/sendtime2"

                android:layout_width="70dp"
                android:layout_height="30dp"
                android:background="@drawable/grayroundbtn"
                android:text="تقديم طلب"
                android:enabled="false"
                android:textColor="#ffffff"
                android:textSize="12dp"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="right"
                android:background="@drawable/whiteround"
                >
                <TextView
                    android:layout_weight="5"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textColor="#0066CC"
                    android:textSize="15dp"
                    android:paddingHorizontal="10dp"
                    android:gravity="center|right"
                    android:text="الفرصة الثانية"
                    />

                <TextView
                    android:layout_weight="5"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textColor="#80000000"
                    android:textSize="12dp"
                    android:paddingHorizontal="10dp"
                    android:gravity="center|right"
                    android:text="سيحسب ربع التاريخ الاساسي وسيتم اضافة تلقائياًً"
                    />



            </LinearLayout>



        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/bluetaskborder"
        android:gravity="right|center"
        android:weightSum="5">
        <ImageView
            android:id="@+id/max2"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/drop"
            />
        <TextView
            android:layout_weight="5"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="#0066CC"
            android:textSize="15dp"
            android:paddingHorizontal="10dp"
            android:gravity="center|right"
            android:text="التحركات السابقة"
            />




    </LinearLayout>
    <LinearLayout
        android:id="@+id/labmax2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="10dp"
        android:orientation="vertical"
        android:visibility="gone"
        android:layout_marginHorizontal="20dp"
        android:background="@drawable/bluetaskborder"
        android:gravity="right|center"
        >

        <ListView
            android:id="@+id/tranhist"
            android:divider="@null"
            android:dividerHeight="0dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="vertical"
        android:layout_gravity="bottom"
        android:layout_marginTop="100dp"
        android:layout_weight="5"
        android:gravity="center"
        >

        <Button
            android:id="@+id/completebtn"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textSize="15dp"
            android:text="انجاز المهمة"

            android:background="@drawable/blueroundfull"
            android:layout_marginHorizontal="15dp"
            android:textColor="#ffffff"
            android:layout_marginTop="20dp"
            />

        <TextView
            android:id="@+id/returnbtn"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textSize="15dp"
            android:text="ارجاع المهمة"
            android:layout_marginHorizontal="15dp"
            android:textColor="#0066CC"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:visibility="gone"
            />

    </LinearLayout>
    </LinearLayout>
</ScrollView>
</LinearLayout>