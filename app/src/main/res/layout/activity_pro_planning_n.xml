<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    tools:context=".Pro_planningActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#00000000"
        android:layout_marginTop="200dp"
        android:layout_gravity="center|bottom"
        android:gravity="center">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:elevation="12dp"
            android:layout_marginTop="10dp"
            android:id="@+id/idCard"
            app:cardCornerRadius="10dp"
            android:background="#ffffff"
            android:layout_centerHorizontal="true">



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:weightSum="6"
                android:background="#05388DCA"
                android:gravity="center|bottom">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="6"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="20dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/close"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/close"
            android:elevation="12dp"
            android:layout_gravity="right"
            />

    </LinearLayout>


    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_gravity="center"
                        android:background="#00000000"
                        android:orientation="vertical">

        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:orientation="horizontal"
                            android:background="#00000000"
                            android:layout_marginBottom="10dp"
                            android:weightSum="3">



                            <ImageView
                                android:id="@+id/prev"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:padding="20dp"
                                app:srcCompat="@drawable/previcon" />


                            <TextView
                                android:id="@+id/saldate"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:textColor="#000000"
                                android:gravity="center"
                                android:textSize="16dp"
                                android:textStyle="bold"
                                android:text="" />

                            <ImageView
                                android:id="@+id/next"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:rotation="180"
                                android:padding="20dp"
                                app:srcCompat="@drawable/previcon" />
                        </LinearLayout>

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="17dp"
            android:layout_marginTop="30dp"
            android:textColor="#0066CC"
            android:text="بيانات التصدير الفعلي و المخطط للمياه" />

        <TextView
            android:layout_width="250dp"
            android:layout_height="3dp"
            android:background="@drawable/lgreenroundfull"
            android:textSize="17dp"
            android:layout_gravity="center"
            />


        <TextView
            android:id="@+id/persangage"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center"
            android:textSize="15dp"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="40dp"
            android:background="@drawable/blueroundfull_pro"
            android:textColor="#ffffff" />

        
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_marginTop="30dp"
            android:layout_marginHorizontal="30dp"
            >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:background="@drawable/whiteround"
                android:orientation="vertical"
                android:layout_weight="1"
                android:weightSum="2"
                android:layout_margin="10dp"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:textSize="15dp"
                    android:textColor="#0066CC"
                    android:text="كمية التصدير الفعليه"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:textSize="15dp"
                    android:layout_weight="1"
                    android:textColor="#0066CC"
                    android:id="@+id/curnttxt"
                    android:text=""/>
            </LinearLayout>


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:background="@drawable/whiteround"
                android:orientation="vertical"
                android:layout_weight="1"
                android:weightSum="2"
                android:layout_margin="10dp"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:textSize="15dp"
                    android:textColor="#0066CC"
                    android:text="كمية التصدير المخططة"/>
                <TextView
                    android:id="@+id/plandtxt"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:textSize="15dp"
                    android:layout_weight="1"
                    android:textColor="#0066CC"
                    android:text=""/>
            </LinearLayout>



        </LinearLayout>
        
    </LinearLayout>


            </LinearLayout>




            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>


</FrameLayout>