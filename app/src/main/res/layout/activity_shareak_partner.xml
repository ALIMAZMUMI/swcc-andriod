<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00000000"
    android:orientation="vertical"
    tools:context=".ShareakPartnerActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:weightSum="7"
        android:background="#004C86">
        <TextView
            android:id="@+id/headertxt"
            android:layout_width="0dp"
            android:layout_weight="6"
            android:textColor="#ffffff"
            android:gravity="center"
            android:paddingLeft="20dp"
            android:textSize="17dp"
            android:layout_height="match_parent"
            android:text=""/>
        <ImageView
            android:id="@+id/backarrow"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:src="@drawable/back_arrow"
            android:padding="20dp"
            />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#00000000"
        android:layout_gravity="center|bottom"
        android:gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >



            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:elevation="12dp"
                android:id="@+id/idCard"
                app:cardCornerRadius="0dp"
                android:background="#ffffff"
                android:layout_centerHorizontal="true">






                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:paddingHorizontal="20dp"
                    android:background="#05388DCA"
                    android:weightSum="5"
                    android:gravity="center|top">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:layout_marginTop="20dp"
                        android:orientation="horizontal">
                        <ImageView
                            android:id="@+id/close"
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:background="@drawable/close"
                            android:elevation="12dp"
                            android:layout_gravity="right"
                            />

                    </LinearLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:weightSum="2"
    android:orientation="horizontal">
    <info.hoang8f.android.segmented.SegmentedGroup
        xmlns:segmentedgroup="http://schemas.android.com/apk/res-auto"
        android:id="@+id/segmented2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="horizontal"
        android:weightSum="2"
        segmentedgroup:sc_border_width="1dp"
        segmentedgroup:sc_tint_color="#0066CC"
        android:background="#050066CC"
        segmentedgroup:sc_corner_radius="5dp">

        <RadioButton
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="الزيارة الثانية"
            android:layout_weight="1"
            style="@style/RadioButton" />

        <RadioButton
            android:id="@+id/button1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="الزيارة الاولى"
            android:layout_weight="1"
            android:checked="true"
            style="@style/RadioButton" />
    </info.hoang8f.android.segmented.SegmentedGroup>

</LinearLayout>


                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:orientation="vertical"
                       android:weightSum="5"
                       android:gravity="right">

                       <TextView
                           android:id="@+id/hname"
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:text="التقييم للعناصر التالية"
                           android:textSize="17dp"
                           android:paddingVertical="5dp"
                           android:layout_marginTop="30dp"
                           android:layout_weight="0.05"
                           android:textColor="#004C86"/>
                       <LinearLayout
                           android:id="@+id/sline"
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:orientation="horizontal"
                           android:gravity="right">
                       <TextView
                           android:layout_width="150dp"
                           android:layout_height="3dp"
                           android:background="@drawable/lgreenroundfull"
                           android:textSize="17dp"


                           />
                       </LinearLayout>

                    <ListView
                        android:id="@+id/projrcts"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="4.5"
                        android:background="#00000000"
                        android:divider="@null"
                        android:layout_marginHorizontal="15dp"
                        android:layout_marginTop="25dp"
                        android:dividerHeight="0dp">
                    </ListView>
                       <ListView
                           android:id="@+id/projrcts1"
                           android:layout_width="match_parent"
                           android:layout_height="0dp"
                           android:layout_weight="4.5"
                           android:background="#00000000"
                           android:divider="@null"
                           android:layout_marginHorizontal="15dp"
                           android:layout_marginTop="25dp"
                           android:dividerHeight="0dp"
                           android:visibility="gone">
                       </ListView>
<Button
android:id="@+id/submit"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:layout_marginHorizontal="30dp"
    android:layout_marginTop="5dp"
    android:layout_weight="0.02"
    android:background="@drawable/grayroundbtn"
    android:text="إرسال"
    android:layout_marginBottom="5dp"
    android:textColor="#ffffff"/>
                   </LinearLayout>

                    <!--                <TextView-->
                    <!--                    android:id="@+id/back"-->
                    <!--                    android:layout_width="100dp"-->
                    <!--                    android:layout_height="80dp"-->
                    <!--                    android:background="@drawable/down"-->
                    <!--                    />-->


                </LinearLayout>


            </androidx.cardview.widget.CardView>



        </LinearLayout>




    </LinearLayout>

</LinearLayout>