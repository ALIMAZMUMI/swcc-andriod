<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    tools:context=".EndofServiceActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#00000000"
        android:layout_marginTop="50dp"
        android:layout_gravity="center|bottom"
        android:gravity="center">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:elevation="12dp"
                    android:layout_marginTop="10dp"
                    android:id="@+id/idCard"
                    app:cardCornerRadius="10dp"
                    android:background="#ffffff"
                    android:layout_marginBottom="-15dp"
                    android:layout_centerHorizontal="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:paddingHorizontal="20dp"
                        android:background="#05388DCA"
                        android:weightSum="5"
                        android:gravity="center|bottom">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:layout_marginTop="20dp"
                            android:orientation="horizontal">
                            <ImageView
                                android:id="@+id/close"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:background="@drawable/close"
                                android:elevation="12dp"
                                android:layout_gravity="right" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_marginTop="10dp"
                            android:layout_weight="5"
                            android:weightSum="7"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textColor="#004C86"
                                android:gravity="center|right"
                                android:textSize="15dp"
                                android:layout_marginTop="25dp"
                                android:layout_marginBottom="10dp"
                                android:paddingRight="5dp"
                                android:text="ادخل الراتب الأساسي"  />

                            <EditText
                                android:id="@+id/BasicSalary"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:background="@drawable/blueborder"
                                android:hint="مثال: 20000"
                                android:inputType="number"
                                android:textSize="12dp"
                                android:gravity="right|center"
                                android:padding="10dp"
                                android:textColor="#0066CC"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textColor="#004C86"
                                android:gravity="center|right"
                                android:textSize="15dp"
                                android:layout_marginTop="25dp"
                                android:layout_marginBottom="10dp"
                                android:paddingRight="5dp"
                                android:text="ادخل جميع البدلات"  />

                            <EditText
                                android:id="@+id/TotalAllowances"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:background="@drawable/blueborder"
                                android:inputType="number"
                                android:hint="مثال: 3500"
                                android:textSize="12dp"
                                android:gravity="right|center"
                                android:padding="10dp"
                                android:textColor="#0066CC"/>

                            <TextView
                                android:id="@+id/txt1"
                                android:layout_width="match_parent"
                                android:layout_height="30dp"
                                android:text=""
                                android:layout_marginTop="10dp"
                                android:textSize="12dp"
                                android:paddingHorizontal="10dp"
                                android:gravity="center|right"/>
                            <TextView
                                android:id="@+id/txt2"
                                android:layout_width="match_parent"
                                android:layout_height="30dp"
                                android:textSize="12dp"
                                android:paddingHorizontal="10dp"
                                android:gravity="center|right"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textColor="#004C86"
                                android:gravity="center|right"
                                android:textSize="15dp"
                                android:layout_marginTop="25dp"
                                android:layout_marginBottom="10dp"
                                android:paddingRight="10dp"
                                android:text="الفترة المطلوبة"  />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:orientation="horizontal"
                                android:weightSum="2">

                                <TextView
                                    android:layout_width="40dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:gravity="right|center"
                                    android:text="آخر يوم عمل"
                                    android:textColor="#004C86"
                                    android:layout_marginRight="20dp"
                                    android:textSize="12sp" />

                                <TextView
                                    android:layout_width="40dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="10dp"
                                    android:layout_weight="1"
                                    android:gravity="right|center"
                                    android:text="تاريخ التعيين"
                                    android:textColor="#004C86"
                                    android:textSize="12sp" />
                            </LinearLayout>

<!--                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:orientation="horizontal"
                                android:weightSum="2"
                                android:gravity="right">

                                <TextView
                                    android:id="@+id/date1"
                                    android:layout_width="0dp"
                                    android:layout_height="40dp"
                                    android:background="@drawable/grayroundbtn"
                                    android:text="1 Apr 2022"
                                    android:paddingHorizontal="10dp"
                                    android:textColor="#000000"
                                    android:layout_marginRight="10dp"
                                    android:layout_marginLeft="20dp"
                                    android:layout_weight="1"
                                    android:gravity="center" />
                                <TextView
                                    android:id="@+id/date12"
                                    android:layout_width="0dp"
                                    android:layout_height="40dp"
                                    android:background="@drawable/grayroundbtn"
                                    android:text="1 Apr 2022"
                                    android:gravity="center"
                                    android:textColor="#000000"
                                    android:layout_marginRight="10dp"
                                    android:layout_marginLeft="20dp"
                                    android:layout_weight="1"/>

                            </LinearLayout>-->
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:orientation="horizontal"
                                android:weightSum="2"
                                android:gravity="right">

                                <TextView
                                    android:id="@+id/EndWorkingDate"
                                    android:layout_width="0dp"
                                    android:layout_height="40dp"
                                    android:background="@drawable/blueborder"
                                    android:text="11 Sep 2022"
                                    android:paddingHorizontal="10dp"
                                    android:textColor="#0066CC"
                                    android:layout_marginRight="10dp"
                                    android:layout_marginLeft="20dp"
                                    android:layout_weight="1"
                                    android:gravity="center" />
                                <TextView
                                    android:id="@+id/startWorkingDate"
                                    android:layout_width="0dp"
                                    android:layout_height="40dp"
                                    android:background="@drawable/blueborder"
                                    android:text="11 Sep 2022"
                                    android:gravity="center"
                                    android:textColor="#0066CC"
                                    android:layout_marginRight="10dp"
                                    android:layout_marginLeft="20dp"
                                    android:layout_weight="1"/>

                            </LinearLayout>
                            <TextView
                                android:id="@+id/txt3"
                                android:layout_width="match_parent"
                                android:layout_height="30dp"
                                android:layout_marginTop="10dp"
                                android:textSize="12dp"
                                android:visibility="gone"
                                android:paddingHorizontal="10dp"
                                android:gravity="center|right"/>
                            <TextView
                                android:id="@+id/txt4"
                                android:layout_width="match_parent"
                                android:layout_height="30dp"
                                android:textSize="12dp"
                                android:visibility="gone"
                                android:paddingHorizontal="10dp"
                                android:gravity="center|right"/>


                            <Button
                                android:id="@+id/submit"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:layout_marginHorizontal="30dp"
                                android:background="@drawable/grayroundbtn"
                                android:text="احسب"
                                android:textSize="14dp"
                                android:layout_marginTop="20dp"
                                android:layout_gravity="center"
                                android:textColor="#ffffff"/>

                        </LinearLayout>


                    </LinearLayout>


                </androidx.cardview.widget.CardView>



            </LinearLayout>




        </LinearLayout>


    </FrameLayout>