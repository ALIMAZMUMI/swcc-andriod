<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#00000000"
    android:gravity="center"
    tools:context=".EmpCardActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#00000000"

        android:gravity="center">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="12dp"
        android:id="@+id/idCard"
        app:cardCornerRadius="10dp"
        android:background="#ffffff"
        android:layout_centerHorizontal="true">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginHorizontal="30dp"
            android:gravity="center">


            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="300dp"
                android:layout_marginTop="40dp"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/swccheader" />

            <TextView
                android:id="@+id/Empdept"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="20dp"
                android:gravity="center"/>
            <TextView
                android:id="@+id/EmpPic"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:textStyle="bold"
                android:gravity="center"/>
            <TextView
                android:layout_width="100dp"
                android:layout_height="35dp"
                android:textSize="20dp"
                android:text="190250"
                android:textStyle="bold"
                android:textColor="#ffffff"
                android:background="@color/colorPrimary"
                android:gravity="center"/>
            <TextView
                android:id="@+id/EmpName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="سامي محمد المزمومي"
                android:textColor="@color/colorPrimary"
                android:textSize="18dp"
                android:textStyle="bold"
                android:gravity="center"/>
            <TextView
                android:id="@+id/JobTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:textStyle="bold"
                android:gravity="center"/>
            <TextView
                android:id="@+id/EmpNameEn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text=""
                android:textColor="@color/colorPrimary"
                android:textSize="18dp"
                android:textStyle="bold"
                android:gravity="center"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:text="TextView" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/blueborder"
                    android:gravity="center"
                    android:layout_marginHorizontal="10dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:weightSum="3"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="20dp"
                            android:textColor="@color/colorPrimary"
                            android:text="Nationality :"
                            android:gravity="center"
                            />
                        <TextView
                            android:id="@+id/EmpNat"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="20dp"
                            android:gravity="center"

                            android:text="" />
                        <TextView
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="20dp"
                            android:textColor="@color/colorPrimary"
                            android:gravity="center"
                            android:text="الجنسية :" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="20dp"
                            android:textColor="@color/colorPrimary"
                            android:text="National ID :"
                            android:gravity="center"
                            />
                        <TextView
                            android:id="@+id/EmpNatID"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="20dp"
                            android:gravity="center"

                            android:text="" />
                        <TextView
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="20dp"
                            android:textColor="@color/colorPrimary"
                            android:gravity="center"
                            android:text="رقم الهوية :" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="20dp"
                            android:textColor="@color/colorPrimary"
                            android:text="Blood type :"
                            android:gravity="center"
                            />
                        <TextView
                            android:id="@+id/EmpBlood"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="20dp"
                            android:gravity="center"
                            android:text="" />
                        <TextView
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="20dp"
                            android:textColor="@color/colorPrimary"
                            android:gravity="center"
                            android:text="فصيلة الدم :" />


                    </LinearLayout>
                </LinearLayout>


            </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:textColor="#ffffff"
                    android:background="@drawable/greenborder"
                    android:gravity="center"
                    android:text=""
                    android:layout_marginBottom="20dp"
                    android:layout_marginTop="10dp"/>


        </LinearLayout>
    </androidx.cardview.widget.CardView>





    <TextView
        android:id="@+id/back"
    android:layout_width="70dp"
    android:layout_height="50dp"
    android:background="@drawable/down"


    />
    </LinearLayout>


    </FrameLayout>