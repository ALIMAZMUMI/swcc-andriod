<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EmployeesTransActivity"
    android:orientation="vertical"
    android:gravity="right"

    >

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#05388DCA"
        android:layout_marginTop="50dp"
        >
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:elevation="12dp"
            android:id="@+id/idCard"
            android:layout_marginTop="10dp"
            app:cardCornerRadius="10dp"
            android:background="#ffffff"
            android:layout_centerHorizontal="true">





            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:weightSum="5"
                android:background="#05388DCA"
                android:gravity="center|right">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:layout_marginTop="20dp"
                    android:layout_marginHorizontal="20dp"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/close"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="@drawable/close"
                        android:elevation="12dp"
                        android:layout_gravity="right"
                        />

                </LinearLayout>

                <TextView
                    android:id="@+id/header"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:textSize="15dp"
                    android:textColor="@color/darkblue"
                    android:textStyle="bold"
                    android:text=""
                    android:layout_marginTop="40dp"
                    android:gravity="center|right"/>



                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:id="@+id/searchvalue"
                    android:layout_marginHorizontal="20dp"
                    android:background="@drawable/darkblueborder"
                    android:textColor="#000000"
                    android:textSize="15dp"
                    android:drawableRight="@drawable/search"
                    android:textStyle="bold"
                    android:hint="   البحث عن العامل بالاسم"
                    android:text=""
                    android:layout_marginTop="20dp"
                    android:gravity="center|right"
                    android:paddingHorizontal="5dp"/>


                <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="حضور وانصراف المرؤوسين"
        android:textSize="17dp"
        android:layout_marginTop="40dp"
        android:paddingVertical="5dp"
        android:layout_marginHorizontal="10dp"
        android:textColor="#004C86"/>

    <TextView
        android:layout_width="150dp"
        android:layout_height="3dp"
        android:layout_marginHorizontal="10dp"
        android:background="@drawable/lgreenroundfull"
        android:textSize="17dp"

        />

   <ListView
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:id="@+id/Emplist"
       android:dividerHeight="0dp"
       android:divider="@null"
       />

            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</LinearLayout>

