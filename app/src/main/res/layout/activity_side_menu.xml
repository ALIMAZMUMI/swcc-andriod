<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:weightSum="6"
    tools:context=".SideMenuActivity">


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:background="#0265cb"
        android:orientation="vertical"
        android:gravity="center|top"
        >
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center|top"
        >
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/menuw"/>

        <LinearLayout
            android:id="@+id/main1"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:layout_marginHorizontal="10dp"
            android:gravity="center"
            android:paddingHorizontal="10dp"
            android:background="@drawable/darkblueroundfull">

<ImageView
    android:id="@+id/menuimg"
    android:layout_width="30dp"
    android:layout_height="30dp"
    android:padding="5dp"

    android:src="@drawable/downw"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center|right"
                android:textColor="#ffffff"
                android:text="من نحن"
                android:textSize="20dp"/>
        </LinearLayout>
        <ListView
            android:visibility="gone"
            android:id="@+id/sub1"
            android:divider="@null"
            android:layout_marginHorizontal="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:id="@+id/main2"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:layout_marginHorizontal="10dp"
            android:gravity="center"
            android:paddingHorizontal="10dp"
            android:background="@drawable/darkblueroundfull">

            <ImageView
                android:id="@+id/menuimg2"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:padding="5dp"

                android:src="@drawable/downw"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center|right"
                android:textColor="#ffffff"
                android:text="خدماتنا"
                android:textSize="20dp"/>
        </LinearLayout>
        <ListView
            android:visibility="gone"
            android:id="@+id/sub2"
            android:divider="@null"

            android:layout_marginHorizontal="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


        <LinearLayout
            android:id="@+id/main3"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:layout_marginHorizontal="10dp"
            android:gravity="center"
            android:paddingHorizontal="10dp"
            android:background="@drawable/darkblueroundfull">

            <ImageView
                android:id="@+id/menuimg3"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:padding="5dp"

                android:src="@drawable/downw"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center|right"
                android:textColor="#ffffff"
                android:text="عملائنا"
                android:textSize="20dp"/>
        </LinearLayout>
        <ListView
            android:visibility="gone"
            android:id="@+id/sub3"
            android:divider="@null"

            android:layout_marginHorizontal="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


        <LinearLayout
            android:id="@+id/main4"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:layout_marginHorizontal="10dp"
            android:gravity="center"
            android:paddingHorizontal="10dp"
            android:background="@drawable/darkblueroundfull">

            <ImageView
                android:id="@+id/menuimg4"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:padding="5dp"
                android:src="@drawable/downw"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center|right"
                android:textColor="#ffffff"
                android:text="الاستدامة"
                android:textSize="20dp"/>
        </LinearLayout>
        <ListView
            android:visibility="gone"
            android:id="@+id/sub4"
            android:divider="@null"

            android:layout_marginHorizontal="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:id="@+id/main5"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:layout_marginHorizontal="10dp"
            android:gravity="center"
            android:paddingHorizontal="10dp"
            android:background="@drawable/darkblueroundfull">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center|right"
                android:textColor="#ffffff"
                android:text="اتصل بنا"
                android:textSize="20dp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/main6"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:layout_marginHorizontal="10dp"
            android:gravity="center"
            android:paddingHorizontal="10dp"
            android:background="@drawable/darkblueroundfull">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center|right"
                android:textColor="#ffffff"
                android:text="تسجيل الدخول"
                android:textSize="20dp"/>
        </LinearLayout>

    </LinearLayout>
</ScrollView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/rightli"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:background="#00000000"
        >

    </LinearLayout>




</LinearLayout>