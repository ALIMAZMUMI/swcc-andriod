<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    tools:context=".BankActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#00000000"
        android:layout_marginTop="20dp"
        android:layout_gravity="center|bottom"
        android:gravity="center">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">



            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:elevation="12dp"
                android:layout_marginTop="10dp"
                android:id="@+id/idCard"
                app:cardCornerRadius="10dp"
                android:layout_marginBottom="-15dp"
                android:background="#ffffff"
                android:layout_centerHorizontal="true">





                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:paddingHorizontal="20dp"
                    android:weightSum="5"
                    android:background="#05388DCA"
                    android:gravity="center|bottom">



                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:layout_marginTop="20dp"
                        android:orientation="horizontal"
                       >
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="الاستعلام عن الضمان البنكي"
                            android:gravity="center"
                            android:textSize="12dp"
                            android:textColor="@color/colorPrimary"
                            />
                        <ImageView
                            android:id="@+id/close"
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:background="@drawable/close"
                            android:elevation="12dp"
                            android:layout_gravity="right"
                            />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_marginTop="5dp"
                        android:layout_weight="5"
                        android:weightSum="7"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textView7"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="#004C86"
                            android:gravity="center|right"
                            android:textSize="13dp"
                            android:layout_marginTop="30dp"
                            android:layout_marginBottom="10dp"
                            android:text="عنوان الطلب" />
                        <EditText
                            android:id="@+id/banknum"
                            android:layout_width="match_parent"
                            android:layout_height="37dp"
                            android:ems="10"
                            android:inputType="text"
                            android:textColor="#0066CC"
                            android:textSize="14dp"
                            android:paddingHorizontal="10dp"
                            android:hint="يرجى كتابة الضمان هنا"
                            android:gravity="right|center"
                            android:background="@drawable/blueborder"
                            android:text=""
                            />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="#004C86"
                            android:gravity="center|right"
                            android:textSize="13dp"
                            android:layout_marginTop="15dp"
                            android:layout_marginBottom="10dp"
                            android:text="* قيمة الضمان"
                            />
                        <EditText
                            android:id="@+id/bankvalue"
                            android:layout_width="match_parent"
                            android:layout_height="37dp"
                            android:textSize="14dp"
                            android:adjustViewBounds="true"
                            android:ems="10"
                            android:inputType="textMultiLine"
                            android:textColor="#0066CC"
                            android:background="@drawable/blueborder"
                            android:text=""
                            android:gravity="top|right"
                            android:padding="10dp"
                            android:hint="يرجى كتابة الضمان هنا"
                            />

                        <Button
                            android:id="@+id/submit"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_marginHorizontal="30dp"
                            android:background="@drawable/grayroundbtn"
                            android:text="إستعلام"
                            android:textSize="14dp"
                            android:layout_marginTop="15dp"
                            android:layout_gravity="center"
                            android:textColor="#ffffff"/>
                        <LinearLayout
                            android:id="@+id/showres"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:weightSum="8"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_marginTop="10dp"
                                android:layout_marginHorizontal="10dp"
                                android:background="#cccccc"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_marginTop="20dp"
                            android:orientation="horizontal"
                            android:gravity="center"
                            android:weightSum="4">
<LinearLayout
    android:id="@+id/Shear"
    android:layout_width="0dp"
    android:layout_height="30dp"
    android:layout_weight="1"
android:background="@drawable/roundshear"
    android:textColor="@color/colorPrimary"
    android:gravity="center"
    android:paddingHorizontal="10dp"
    >

    <TextView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:text="مشاركة"
        android:gravity="center"

        android:textColor="@color/colorPrimary"
        />
    <ImageView
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:background="@drawable/shareqr"
        android:layout_gravity="center"
        />

</LinearLayout>
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="3"
                                android:text="نتيجة الاستعلام"
                                android:gravity="center|right"
                                android:textColor="@color/colorPrimary"
                                />

                        </LinearLayout>

<!--                        <WebView-->
<!--                            android:id="@+id/web"-->
<!--                            android:layout_width="match_parent"-->
<!--                            android:layout_height="0dp"-->
<!--                            android:layout_weight="7"-->
<!--                            tools:ignore="WebViewLayout" />-->


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="7"
    android:background="@drawable/roundgray"
    android:paddingHorizontal="10dp">
                            <com.github.barteksc.pdfviewer.PDFView
                                android:id="@+id/pdfView"
                                android:layout_height="match_parent"
                                android:background="#ffffff"
                                android:layout_marginTop="10dp"
                                android:layout_width="match_parent"/>
</LinearLayout>
                            </LinearLayout>




                    </LinearLayout>

                    <!--                <TextView-->
                    <!--                    android:id="@+id/back"-->
                    <!--                    android:layout_width="120dp"-->
                    <!--                    android:layout_height="100dp"-->
                    <!--                    android:background="@drawable/down"-->


                    <!--                    />-->


                </LinearLayout>

            </androidx.cardview.widget.CardView>




        </LinearLayout>

    </LinearLayout>


</FrameLayout>