<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    tools:context=".Task_Add_EmpActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#00000000"
        android:layout_marginTop="50dp"
        android:layout_gravity="center|bottom"
        android:gravity="center">


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#05388DCA"
            >
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:elevation="12dp"
                android:id="@+id/idCard"
                android:layout_marginTop="10dp"
                app:cardCornerRadius="10dp"
                android:background="#ffffff"
                android:layout_centerHorizontal="true">





                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:weightSum="5"
                    android:background="#05388DCA"
                    android:gravity="center|top">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:layout_marginTop="20dp"
                        android:layout_marginHorizontal="20dp"
                        android:orientation="horizontal">
                        <ImageView
                            android:id="@+id/close"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:background="@drawable/close"
                            android:elevation="12dp"
                            android:layout_gravity="right"
                            />

                    </LinearLayout>

<EditText
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:layout_marginHorizontal="20dp"
    android:background="@drawable/darkblueborder"
    android:textColor="#000000"
    android:textSize="15dp"
    android:drawableRight="@drawable/search"
    android:textStyle="bold"
    android:hint="البحث عن العامل بالاسم او بالرقم الوظيفي"
    android:text=""
    android:layout_marginTop="20dp"
    android:gravity="center|right"
    android:paddingHorizontal="5dp"
    android:id="@+id/schvalue"
/>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:layout_marginTop="30dp"
                        android:layout_marginHorizontal="25dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textheader"
                            android:layout_width="match_parent"
                            android:layout_height="29dp"
                            android:textColor="#004C86"
                            android:textSize="16dp"
                            android:gravity="center|right"
                            android:text="يرجى اختيار العاملين"
                            />
                        <TextView
                            android:layout_width="180dp"
                            android:layout_height="3dp"
                            android:background="@drawable/lgreenroundfull"
                            android:textSize="17dp"

                            />


                    </LinearLayout>




                    <TextView
                        android:id="@+id/nodata"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="20dp"
                        android:textColor="#CACCCE"
                        android:visibility="gone"
                        android:gravity="center"
                        android:layout_marginTop="50dp"
                        android:text="لا يوجد محتوى بعد"
                        />
                    <ListView
                        android:id="@+id/searchres"
                        android:layout_marginHorizontal="25dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:divider="@null"
                        android:layout_marginTop="20dp"
                        android:dividerHeight="10dp"
                        android:layout_marginBottom="90dp"
                        />

                </LinearLayout>

                <Button
                    android:id="@+id/submit"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_gravity="bottom|center"
                    android:text="حفظ"
                    android:layout_marginHorizontal="40dp"
                    android:layout_marginBottom="40dp"
                    android:textColor="#ffffff"
                    android:background="@drawable/grayroundbtn"
                    />
            </androidx.cardview.widget.CardView>


        </LinearLayout>


    </LinearLayout>


</FrameLayout>