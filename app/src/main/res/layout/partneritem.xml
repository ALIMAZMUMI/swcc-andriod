<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
android:background="#00000000"
    android:layout_height="match_parent">


    <androidx.cardview.widget.CardView
        android:id="@+id/idCard"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:background="#ffffff"
        android:elevation="1dp"
        android:layout_margin="10dp"
        app:cardCornerRadius="10dp">
        <LinearLayout
            android:id="@+id/row"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="right|center"
            android:background="@drawable/ligthblueborder"
            android:weightSum="10"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/cmted"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="3"
                android:orientation="vertical"
                android:gravity="center"
                android:paddingLeft="17dp"
                android:visibility="gone">
                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_gravity="center|left"
                    android:background="@drawable/notes"
                    android:gravity="center|right"
                    />
                />
            </LinearLayout>
            <TextView

                android:id="@+id/addnote"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:textSize="12dp"
                android:layout_weight="2"
                android:text="اضافة ملاحظة"
                android:visibility="gone"
                android:textColor="#0066CC"
                android:gravity="center"/>


            <LinearLayout
                android:visibility="gone"
                android:id="@+id/complete"
    android:layout_width="0dp"
    android:layout_height="60dp"
                android:layout_weight="3"
    android:orientation="vertical"
    android:gravity="center|left">
    <TextView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:textSize="15dp"
                android:text=""
        android:background="@drawable/emptycircl"
                android:gravity="center|right"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textSize="12dp"
        android:text="تحقق"
        android:textColor="#0066CC"
        android:paddingVertical="5dp"
        android:paddingHorizontal="10dp"
        android:gravity="center|right"/>
</LinearLayout>

            <TextView
                android:id="@+id/line"
                android:layout_width="2dp"
                android:layout_marginVertical="10dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:textSize="13dp"

                android:text=""
android:background="#33CACCCE"
                android:paddingHorizontal="10dp"
                android:gravity="center|right"/>
            <TextView
                android:id="@+id/rowtext1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:textSize="13dp"
                android:text=""
                android:layout_weight="7"
                android:textColor="#004C86"
                android:paddingHorizontal="10dp"
                android:gravity="center|right"/>

<ImageView
    android:id="@+id/checked"
    android:layout_weight="1"
    android:layout_width="0dp"
    android:layout_height="30dp"
    android:layout_gravity="center"
    android:src="@drawable/circheck"
    android:layout_marginRight="10dp"
    />


        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>