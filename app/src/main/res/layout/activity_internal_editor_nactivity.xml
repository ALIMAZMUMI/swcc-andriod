<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    tools:context=".InternalEditorActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#00000000"
        android:layout_marginTop="50dp"
        android:layout_gravity="center|bottom"
        android:gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >



            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:elevation="12dp"
                android:layout_marginTop="10dp"
                android:id="@+id/idCard"
                app:cardCornerRadius="10dp"
                android:background="#ffffff"
                android:layout_marginBottom="-15dp"
                android:layout_centerHorizontal="true">






                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:paddingHorizontal="20dp"
                    android:background="#05388DCA"
                    android:weightSum="5"
                    android:gravity="center|bottom">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:layout_marginTop="20dp"
                        android:orientation="horizontal">
                        <ImageView
                            android:id="@+id/close"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:background="@drawable/close"
                            android:elevation="12dp"
                            android:layout_gravity="right"
                            />

                    </LinearLayout>


                    <TextView
                        android:id="@+id/header"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="15dp"
                        android:textColor="@color/darkblue"
                        android:textStyle="bold"
                        android:text="المراجعة الداخلية"
                        android:layout_marginTop="10dp"
                        android:gravity="center|right"/>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_marginTop="10dp"
                        android:layout_weight="5"
                        android:weightSum="7"
                        android:orientation="vertical">



                        <TextView
                            android:id="@+id/textView7"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorPrimary"
                            android:gravity="center|right"
                            android:textSize="15dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:text="تصنيف البلاغ" />

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:elevation="12dp"
                            app:cardCornerRadius="10dp"
                            android:layout_centerHorizontal="true">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:layout_gravity="center"
                                android:orientation="horizontal">

                                <Spinner
                                    android:id="@+id/servicetype"
                                    android:layout_width="match_parent"
                                    android:layout_height="40dp"
                                    android:background="@drawable/blueborder" />

                                <ImageView
                                    android:layout_width="40dp"
                                    android:layout_height="40dp"
                                    android:layout_alignParentLeft="true"
                                    android:layout_centerVertical="true"
                                    android:layout_gravity="center"
                                    android:padding="13dp"
                                    android:src="@drawable/downw" />

                            </RelativeLayout>


                        </androidx.cardview.widget.CardView>


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorPrimary"
                            android:gravity="center|right"
                            android:textSize="15dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:text="وصف البلاغ"  />

                        <EditText
                            android:id="@+id/detials"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="3"
                            android:ems="10"
                            android:inputType="textMultiLine"
                            android:textColor="#0066CC"
                            android:background="@drawable/blueborder"
                            android:text=""
                            android:textSize="12dp"
                            android:gravity="top|right"
                            android:padding="10dp"
                            android:hint="كتابة الوصف تسمح ٥٠٠ حرف"/>


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorPrimary"
                            android:gravity="center|right"
                            android:textSize="15dp"
                            android:layout_marginTop="25dp"
                            android:layout_marginBottom="10dp"
                            android:text="موقع ارتكاب المخالفة" />

<EditText
    android:id="@+id/locationtxt"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:background="@drawable/blueborder"
    android:hint="يرجى كتابة مكان المخالفة هنا"
    android:textSize="12dp"
    android:gravity="right|center"
    android:padding="10dp"
    />



                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorPrimary"
                            android:gravity="center|right"
                            android:textSize="15dp"
                            android:layout_marginTop="25dp"
                            android:layout_marginBottom="10dp"
                            android:text="تاريخ ارتكاب المخالفة" />

                        <TextView
                            android:id="@+id/date"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:layout_gravity="right"
                            android:background="@drawable/grayroundbtn"
                            android:text="1 Apr 2022"
                            android:gravity="center"
                            android:paddingHorizontal="10dp"
                            android:textColor="#000000"
                            />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:layout_marginTop="20dp"
                            android:orientation="horizontal">




                            <ImageView
                                android:id="@+id/removeimage"
                                android:layout_width="10dp"
                                android:layout_height="10dp"
                                android:textColor="#0066CC"
                                android:layout_gravity="center"
                                android:layout_marginRight="10dp"
                                android:background="@drawable/close"
                                android:visibility="gone"
                                />
                            <TextView
                                android:id="@+id/removeimagetxt"
                                android:layout_width="wrap_content"
                                android:layout_height="30dp"
                                android:textColor="#004C86"
                                android:gravity="center|right"
                                android:layout_gravity="center"
                                android:textSize="12dp"
                                android:paddingRight="10dp"
                                android:visibility="gone"
                                android:text="صورة" />




                            <TextView
                                android:id="@+id/addimagetxt"
                                android:layout_width="wrap_content"
                                android:layout_height="30dp"
                                android:textColor="#0066CC"
                                android:gravity="center|right"
                                android:textSize="12dp"
                                android:paddingRight="10dp"

                                android:text="التقاط وتحميل صورة" />

                            <ImageView
                                android:id="@+id/addimage"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                app:srcCompat="@drawable/camera"
                                android:padding="5dp"/>

                        </LinearLayout>


                        <Button
                            android:id="@+id/submit"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_marginHorizontal="30dp"
                            android:background="@drawable/grayroundbtn"
                            android:text=" ارسال البلاغ"
                            android:textSize="14dp"
                            android:layout_marginTop="20dp"
                            android:layout_gravity="center"
                            android:textColor="#ffffff"/>


                    </LinearLayout>

                    <!--                <TextView-->
                    <!--                    android:id="@+id/back"-->
                    <!--                    android:layout_width="100dp"-->
                    <!--                    android:layout_height="80dp"-->
                    <!--                    android:background="@drawable/down"-->
                    <!--                    />-->


                </LinearLayout>


            </androidx.cardview.widget.CardView>



        </LinearLayout>




    </LinearLayout>


</FrameLayout>