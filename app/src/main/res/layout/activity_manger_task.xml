<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MangerTaskActivity"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:layout_marginTop="30dp"
        android:layout_marginHorizontal="25dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="29dp"
            android:textColor="#004C86"
            android:textSize="16dp"
            android:gravity="center|right"
            android:text="لوحة قياس ادارة المهام"
            />
        <TextView
            android:layout_width="180dp"
            android:layout_height="3dp"
            android:background="@drawable/lgreenroundfull"
            android:textSize="17dp"

            />


    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:gravity="right"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="25dp"
        app:cardBackgroundColor="#23B3E931"
        app:cardCornerRadius="7dp"
        android:orientation="vertical">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="right|center"
            android:weightSum="10"
            android:orientation="horizontal">

            <org.eazegraph.lib.charts.PieChart
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/piechart1"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:padding="6dp"
                android:layout_weight="2"

                />
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="right|center"
android:layout_weight="8"
                android:paddingHorizontal="5dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="29dp"
                    android:textColor="#0066CC"
                    android:textSize="16dp"
                    android:gravity="center|right"
                    android:text="نسبة انجاز المهام في وقتها"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="29dp"
                    android:textColor="#000000"
                    android:textSize="12dp"
                    android:gravity="center|right"
                    android:text="عدد المهام المنجزة في وقتها من العدد الاجمالي"
                    />

            </LinearLayout>

        </LinearLayout>


    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:gravity="right"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="25dp"
        app:cardBackgroundColor="#590066CC"
        app:cardCornerRadius="7dp"
        android:orientation="vertical">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="right|center"
            android:weightSum="10"
            android:orientation="horizontal">

            <org.eazegraph.lib.charts.PieChart
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/piechart2"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:padding="6dp"
                android:layout_weight="2"

                />
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="right|center"
                android:layout_weight="8"
                android:paddingHorizontal="5dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="29dp"
                    android:textColor="#0066CC"
                    android:textSize="16dp"
                    android:gravity="center|right"
                    android:text="نسبة كفاءة مخرجات المهام"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="29dp"
                    android:textColor="#000000"
                    android:textSize="12dp"
                    android:gravity="center|right"
                    android:text="تحسب من المهام المقيمة فقط"
                    />

            </LinearLayout>

        </LinearLayout>


    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:layout_marginTop="30dp"
        android:layout_marginHorizontal="25dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textheader"
            android:layout_width="match_parent"
            android:layout_height="29dp"
            android:textColor="#004C86"
            android:textSize="16dp"
            android:gravity="center|right"
            android:text="ادارة المهام"
            />
        <TextView
            android:layout_width="180dp"
            android:layout_height="3dp"
            android:background="@drawable/lgreenroundfull"
            android:textSize="17dp"

            />



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:gravity="right|center"
            android:weightSum="10"
            android:layout_marginTop="10dp"

            android:orientation="horizontal">



            <LinearLayout
                android:layout_width="0dp"
                android:gravity="right|center"
android:layout_weight="5"
                android:layout_height="90dp"
                android:background="@drawable/gradientbg"
                android:layout_marginRight="2.5dp"
                android:orientation="horizontal">

            </LinearLayout>


            <LinearLayout
                android:layout_weight="5"
                android:layout_marginLeft="2.5dp"
                android:background="@drawable/gradientbg"
                android:layout_width="0dp"
                android:layout_height="90dp"
                android:gravity="right|center"
                android:weightSum="10"
                android:orientation="horizontal"></LinearLayout>


        </LinearLayout>


    </LinearLayout>


</LinearLayout>