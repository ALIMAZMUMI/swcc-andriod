<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingHorizontal="10dp"
    android:paddingVertical="10dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="104dp"
        android:orientation="vertical"

        android:background="@drawable/bluetaskborder"
        >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal"
            android:weightSum="6"
            android:paddingHorizontal="10dp"
            android:gravity="center|right"
            >

            <TextView
                android:id="@+id/taskname"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:gravity="center|right"
                android:textColor="#004C86"
                android:text="كتابة التقرير"
                />


            <LinearLayout
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:gravity="center">
                <androidx.cardview.widget.CardView
                    android:id="@+id/taskstatusc"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    app:cardCornerRadius="15dp"
                    app:cardBackgroundColor="#590066CC"/>

            </LinearLayout>
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#590066CC"
            android:layout_marginHorizontal="10dp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="horizontal"
            android:weightSum="10"
            >


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:orientation="vertical"
                android:layout_weight="0"
                android:gravity="center"
                android:paddingHorizontal="10dp"
                >

                <ImageView
                    android:id="@+id/more"
                    android:layout_width="20dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    app:srcCompat="@drawable/more"
                    android:visibility="gone" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="10">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_weight="5"
                    android:gravity="center"
                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/tasktitle"
    android:layout_width="0dp"
    android:layout_height="30dp"
                        android:paddingHorizontal="10dp"
                        android:gravity="right|center"
                        android:layout_weight="5"

    />

                </LinearLayout>

                <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:orientation="horizontal"
                    android:paddingHorizontal="10dp"

                    android:gravity="center">

                    <TextView
                        android:id="@+id/notetxt"
                        android:layout_width="0dp"
                        android:layout_height="30dp"
                        android:layout_weight="5"
                        android:textColor="#0066CC"

                        />
                    <ImageView
                        android:id="@+id/noteicon"
                        android:layout_width="0dp"
                        android:layout_height="15dp"
                        android:layout_weight="1"
                        android:src="@drawable/notes"

                        />
                    <TextView
                        android:id="@+id/personname"
                        android:layout_width="0dp"
                        android:layout_height="30dp"
                        android:layout_weight="3"
                        android:textColor="#0066CC"

                        />
                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="15dp"
                        android:layout_weight="1"
                        android:src="@drawable/personicon"

                        />

                </LinearLayout>

            </LinearLayout>


            <TextView
                android:layout_width="1dp"
                android:layout_marginRight="10dp"
                android:layout_marginVertical="5dp"
                android:layout_height="match_parent"
                android:background="#ff0000"
                android:visibility="gone"/>
        </LinearLayout>



    </LinearLayout>



</LinearLayout>