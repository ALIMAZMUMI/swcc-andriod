<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    tools:context=".Emp_Add_TaskActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#00000000"
        android:layout_marginTop="50dp"
        android:layout_gravity="center|bottom"
        android:gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >


<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
            >
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:elevation="12dp"
                android:layout_marginTop="10dp"
                android:id="@+id/idCard"
                app:cardCornerRadius="10dp"
                android:background="#ffffff"
                android:layout_marginBottom="-15dp"
                android:layout_centerHorizontal="true">






                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:paddingHorizontal="20dp"
                    android:background="#05388DCA"
                    android:weightSum="5"
                    android:gravity="center|bottom">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:layout_marginTop="20dp"
                        android:orientation="horizontal">
                        <ImageView
                            android:id="@+id/close"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:background="@drawable/close"
                            android:elevation="12dp"
                            android:layout_gravity="right"
                            />

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_marginTop="10dp"
                        android:layout_weight="5"
                        android:weightSum="7"
                        android:orientation="vertical">



                        <TextView
                            android:id="@+id/textView7"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="#004C86"
                            android:gravity="center|right"
                            android:textSize="15dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:text="عنوان المهمة" />

                        <EditText
                            android:id="@+id/Task_Titel"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:background="@drawable/blueborder"
                            android:hint="كتابة العنوان هنا …"
                            android:textSize="12dp"
                            android:gravity="right|center"
                            android:padding="10dp"
                            android:maxLength="60"

                            />
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center|right">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="#80000000"
                                android:gravity="center|right"
                                android:textSize="12dp"
                                android:layout_marginTop="5dp"
                                android:layout_marginBottom="10dp"
                                android:text="  (100 كلمة)"  />
                            <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#004C86"
                            android:gravity="center|right"
                            android:textSize="15dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="10dp"
                            android:text="وصف المهمة"  />

                        </LinearLayout>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="70dp">
                        <EditText
                            android:id="@+id/detials"
                            android:layout_width="match_parent"
                            android:layout_height="70dp"
                            android:layout_weight="1"
                            android:ems="10"
                            android:inputType="textMultiLine"
                            android:textColor="#0066CC"
                            android:background="@drawable/blueborder"
                            android:text=""
                            android:textSize="12dp"
                            android:gravity="top|right"
                            android:padding="10dp"
                            android:maxLength="100"
                            android:hint="كتابة الوصف تسمح 100 حرف"/>

    <Button
        android:id="@+id/button"
        android:layout_width="60dp"
        android:layout_height="40dp"
android:layout_marginLeft="5dp"
        android:layout_alignParentEnd="false"
        android:layout_alignParentBottom="true"
        android:text="صوتي"
        android:textSize="10dp"
        android:visibility="gone"
        android:gravity="center"/>

</RelativeLayout>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="#004C86"
                            android:gravity="center|right"
                            android:textSize="15dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"
                            android:text="اسناد المهمة الى" />

                        <LinearLayout
                            android:id="@+id/emplist"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:layout_marginTop="5dp"
                            android:padding="5dp"
                            android:background="@drawable/blueborder"
                            android:orientation="vertical"
                            >

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="right"
                                android:orientation="vertical"
                                >

                                <com.google.android.material.chip.ChipGroup
                                    android:id="@+id/empchips"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="right"
                                    android:layoutDirection="rtl"
                                    style="@style/ChipGroup"
                                    android:layout_centerInParent="true" >


<!--                                    <com.google.android.material.chip.Chip-->
<!--                                        android:id="@+id/chipPython"-->
<!--                                        app:chipBackgroundColor="@android:color/holo_blue_bright"-->
<!--                                        android:layout_width="wrap_content"-->
<!--                                        android:layout_height="25dp"-->
<!--                                        android:textSize="11dp"-->
<!--                                        android:textColor="#004C86"-->
<!--                                        app:checkedIcon="@null"-->
<!--                                        app:chipIconEnabled="true"-->
<!--                                        android:layoutDirection="rtl"-->
<!--                                        app:chipIcon="@drawable/personi"-->
<!--                                        android:paddingHorizontal="20dp"-->
<!--                                        android:gravity="center"-->
<!--                                        android:text="علي المزمومي"-->
<!--                                        />-->


                                </com.google.android.material.chip.ChipGroup>



                                <LinearLayout
                                android:id="@+id/addemp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="right"
                                android:background="@drawable/ligthbluefull"
                                android:orientation="horizontal"
                                android:paddingHorizontal="5dp">





                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="30dp"
                                    android:textColor="#0066CC"
                                    android:gravity="right|center"
                                    android:textSize="12dp"

                                    android:text="اضافة عامل" />

                                <ImageView
                                    android:layout_width="25dp"
                                    android:layout_height="30dp"
                                    app:srcCompat="@drawable/plus"
                                    android:padding="5dp"/>
                            </LinearLayout>

                            </LinearLayout>

                        </LinearLayout>




                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="#004C86"
                            android:gravity="center|right"
                            android:textSize="15dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"
                            android:text="تاريخ التسليم" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:layout_marginTop="10dp"
                            android:padding="5dp"
                            android:background="@drawable/blueborder"
                            android:orientation="horizontal">



                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="right"
                                android:background="@drawable/ligthbluefull"
                                android:orientation="horizontal"
                                android:paddingHorizontal="5dp">





                                <TextView
                                    android:id="@+id/date"
                                    android:layout_width="wrap_content"
                                    android:layout_height="30dp"
                                    android:textColor="#0066CC"
                                    android:gravity="right|center"
                                    android:textSize="12dp"

                                    android:text="تحديد التاريخ" />

                                <ImageView
                                    android:layout_width="25dp"
                                    android:layout_height="30dp"
                                    app:srcCompat="@drawable/calender"
                                    android:padding="5dp"/>
                            </LinearLayout>


                        </RelativeLayout>





                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="#004C86"
                            android:gravity="center|right"
                            android:textSize="15dp"
                            android:layout_marginTop="5dp"
                            android:text="المرفقات" />
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:layout_marginTop="10dp"
                            android:padding="10dp"
                            android:background="@drawable/blueborder"
                            android:orientation="horizontal">



                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="right"
                                android:background="@drawable/ligthbluefull"
                                android:orientation="horizontal"
                                android:paddingHorizontal="5dp">
                            <ImageView
                                android:id="@+id/removeimage"
                                android:layout_width="10dp"
                                android:layout_height="10dp"
                                android:textColor="#0066CC"
                                android:layout_gravity="center"
                                android:layout_marginRight="10dp"
                                android:background="@drawable/close"
                                android:visibility="gone"
                                />
                            <TextView
                                android:id="@+id/removeimagetxt"
                                android:layout_width="wrap_content"
                                android:layout_height="30dp"
                                android:textColor="#004C86"
                                android:gravity="center|right"
                                android:layout_gravity="center"
                                android:textSize="12dp"
                                android:paddingRight="10dp"
                                android:visibility="gone"
                                android:text="صورة" />




                            <TextView
                                android:id="@+id/addimagetxt"
                                android:layout_width="wrap_content"
                                android:layout_height="30dp"
                                android:textColor="#0066CC"
                                android:gravity="right|center"
                                android:textSize="10dp"

                                android:text="تحميل مرفق" />

                            <ImageView
                                android:id="@+id/addimage"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                app:srcCompat="@drawable/attach"
                                android:padding="5dp"/>
                            </LinearLayout>


                        </RelativeLayout>


                        <Button
                            android:id="@+id/submit"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_marginHorizontal="30dp"
                            android:background="@drawable/grayroundbtn"
                            android:text="إسناد"
                            android:textSize="14dp"
                            android:layout_marginTop="20dp"
                            android:layout_gravity="center"
                            android:textColor="#ffffff"/>


                    </LinearLayout>

                    <!--                <TextView-->
                    <!--                    android:id="@+id/back"-->
                    <!--                    android:layout_width="100dp"-->
                    <!--                    android:layout_height="80dp"-->
                    <!--                    android:background="@drawable/down"-->
                    <!--                    />-->


                </LinearLayout>


            </androidx.cardview.widget.CardView>
</ScrollView>

        </LinearLayout>




    </LinearLayout>


</FrameLayout>