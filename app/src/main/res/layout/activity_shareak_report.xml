<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00000000"
    android:orientation="vertical"
    tools:context=".ShareakReportActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:weightSum="7"
        android:background="#004C86">
        <TextView
            android:id="@+id/headertxt"
            android:layout_width="0dp"
            android:layout_weight="6"
            android:textColor="#ffffff"
            android:gravity="center"
            android:paddingLeft="20dp"
            android:textSize="17dp"
            android:layout_height="match_parent"
            android:text=""/>
        <ImageView
            android:id="@+id/backarrow"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:src="@drawable/back_arrow"
            android:padding="20dp"
            />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#00000000"
        android:layout_gravity="center|bottom"
        android:gravity="center">


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:elevation="12dp"
                android:id="@+id/idCard"
                app:cardCornerRadius="0dp"
                android:background="#ffffff"
                android:layout_centerHorizontal="true">






                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:paddingHorizontal="20dp"
                    android:background="#05388DCA"
                    android:weightSum="5"
                    android:gravity="center|bottom">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:visibility="gone"
                        android:layout_marginTop="20dp"
                        android:orientation="horizontal">
                        <ImageView
                            android:id="@+id/close"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:background="@drawable/close"
                            android:elevation="12dp"
                            android:layout_gravity="right"
                            />

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_marginTop="20dp"
                        android:layout_weight="5"
                        android:weightSum="7"
                        android:orientation="vertical">



                        <TextView
                            android:id="@+id/textView7"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="#004C86"
                            android:gravity="center|right"
                            android:textSize="15dp"
                            android:layout_marginTop="30dp"
                            android:layout_marginBottom="10dp"
                            android:text="اختر اسم المشروع" />

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:elevation="12dp"
                            app:cardCornerRadius="10dp"
                            android:layout_centerHorizontal="true">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:layout_gravity="center"
                                android:orientation="horizontal">

                                <Spinner
                                    android:id="@+id/projecttype"
                                    android:layout_width="match_parent"
                                    android:layout_height="60dp"
                                    android:background="@drawable/blueborder" />

                                <ImageView
                                    android:layout_width="40dp"
                                    android:layout_height="40dp"
                                    android:layout_alignParentLeft="true"
                                    android:layout_centerVertical="true"
                                    android:layout_gravity="center"
                                    android:padding="13dp"
                                    android:src="@drawable/downw" />

                            </RelativeLayout>


                        </androidx.cardview.widget.CardView>


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="#004C86"
                            android:gravity="center|right"
                            android:textSize="15dp"
                            android:layout_marginTop="25dp"
                            android:layout_marginBottom="10dp"
                            android:text="اختر نوع التقرير" />


                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:elevation="12dp"
                            app:cardCornerRadius="10dp"
                            android:layout_marginTop="10dp"
                            android:layout_centerHorizontal="true">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <Spinner
                                    android:id="@+id/reporttype"
                                    android:layout_width="match_parent"
                                    android:layout_height="40dp"
                                    android:background="@drawable/blueborder" />

                                <ImageView
                                    android:layout_width="40dp"
                                    android:layout_height="40dp"
                                    android:layout_alignParentLeft="true"
                                    android:layout_centerVertical="true"
                                    android:layout_gravity="center"
                                    android:padding="13dp"
                                    android:src="@drawable/downw" />

                            </RelativeLayout>


                        </androidx.cardview.widget.CardView>



                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="#004C86"
                            android:gravity="center|right"
                            android:textSize="15dp"
                            android:layout_marginTop="25dp"
                            android:layout_marginBottom="10dp"
                            android:text="اختر اليوم المطلوب" />


                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:elevation="12dp"
                            app:cardCornerRadius="10dp"
                            android:layout_marginTop="10dp"
                            android:layout_centerHorizontal="true">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <Spinner
                                    android:id="@+id/date"
                                    android:layout_width="match_parent"
                                    android:layout_height="40dp"
                                    android:background="@drawable/blueborder" />

                                <ImageView
                                    android:layout_width="40dp"
                                    android:layout_height="40dp"
                                    android:layout_alignParentLeft="true"
                                    android:layout_centerVertical="true"
                                    android:layout_gravity="center"
                                    android:padding="13dp"
                                    android:src="@drawable/downw" />

                            </RelativeLayout>


                        </androidx.cardview.widget.CardView>

                        <Button
                            android:id="@+id/submit"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_marginHorizontal="30dp"
                            android:background="@drawable/grayroundbtn"
                            android:text="تصدير"
                            android:textSize="14dp"
                            android:layout_marginTop="15dp"
                            android:layout_gravity="center"
                            android:textColor="#ffffff"/>


                    </LinearLayout>

                    <!--                <TextView-->
                    <!--                    android:id="@+id/back"-->
                    <!--                    android:layout_width="100dp"-->
                    <!--                    android:layout_height="80dp"-->
                    <!--                    android:background="@drawable/down"-->
                    <!--                    />-->


                </LinearLayout>



            </androidx.cardview.widget.CardView>


        </LinearLayout>




    </LinearLayout>


</LinearLayout>