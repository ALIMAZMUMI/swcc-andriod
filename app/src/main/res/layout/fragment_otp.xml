<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Otp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingHorizontal="30dp"
        android:gravity="center|top"
        android:orientation="vertical">

        <TextView
            android:id="@+id/Mobmsg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="20dp"
            android:gravity="center"
            android:textColor="@color/colorPrimary"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#004C86"
            android:gravity="center|right"
            android:textSize="15dp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="10dp"
            android:text="رمز التحقق" />
        <EditText
            android:id="@+id/otp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:ems="10"
            android:background="@drawable/darkblueborder"
            android:inputType="number"
            android:gravity="center|right"
            android:paddingHorizontal="10dp"
            android:hint="رمز التحقق" />

        <Button
            android:id="@+id/sub_otp"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/grayroundbtn"
            android:text="تسجيل الدخول"
            android:textSize="14dp"
            android:layout_marginTop="30dp"
            android:layout_gravity="center"
            android:textColor="#ffffff"
            />

        <TextView
            android:id="@+id/resend"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="إعادة إرسال الرمز"
            android:textColor="#004C86"
            android:textSize="18sp"

            android:textStyle="bold"
            />

        <ProgressBar
            android:id="@+id/resend_pro"
            style="?android:attr/progressBarStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
</FrameLayout>