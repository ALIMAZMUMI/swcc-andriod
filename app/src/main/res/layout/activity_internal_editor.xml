<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    tools:context=".InternalEditorActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#00000000"
        android:layout_marginTop="50dp"
        android:layout_gravity="center|bottom"
        android:gravity="center">


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:elevation="12dp"
                android:layout_marginTop="10dp"
                android:id="@+id/idCard"
                app:cardCornerRadius="10dp"
                android:background="#ffffff"
                android:layout_centerHorizontal="true">






                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:paddingHorizontal="20dp"
                    android:background="#05388DCA"
                    android:weightSum="5"
                    android:gravity="center|bottom">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:layout_marginTop="20dp"
                        android:orientation="horizontal">
                        <ImageView
                            android:id="@+id/close"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:background="@drawable/close"
                            android:elevation="12dp"
                            android:layout_gravity="right"
                            />

                    </LinearLayout>


                    <TextView
                        android:id="@+id/header"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="10dp"
                        android:textSize="15dp"
                        android:textColor="@color/darkblue"
                        android:textStyle="bold"
                        android:text="المراجعة الداخلية"
                        android:layout_marginTop="40dp"
                        android:gravity="center|right"/>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_marginTop="20dp"
                        android:layout_weight="5"
                        android:weightSum="7"
                        android:orientation="vertical">



                       <LinearLayout
                           android:id="@+id/l1"
                           android:layout_width="match_parent"
                           android:layout_height="60dp"
                           android:orientation="horizontal"
                           android:background="#ffffff"
                           android:layout_marginTop="10dp"
                           android:weightSum="5">

                           <LinearLayout
                               android:layout_width="0dp"
                               android:layout_height="match_parent"
                               android:orientation="vertical"
                               android:gravity="center"
                               android:layout_weight="1">
                               <ImageView
                                   android:layout_width="35dp"
                                   android:layout_height="35dp"
                                   android:src="@drawable/mail"
                                   android:padding="7dp"
                                   />
                               <TextView
                                   android:layout_width="wrap_content"
                                   android:layout_height="match_parent"
                                   android:textColor="#0066CC"
                                   android:textSize="11dp"
                                   android:gravity="right|center"
                                   android:text="ارسال بريد"/>
                           </LinearLayout>

                           <TextView
                               android:layout_width="0dp"
                               android:layout_height="match_parent"
                               android:textColor="#0066CC"
                               android:textSize="13dp"
                               android:layout_weight="4"
                               android:gravity="right|center"
                               android:paddingHorizontal="5dp"
                               android:text="مخالفة الأنظمة واللوائح والتعليمات والسياسات المعمول بها في المؤسسة والخاضعة لها"/>

                       </LinearLayout>

                        <LinearLayout
                            android:id="@+id/l2"
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:orientation="horizontal"
                            android:background="#ffffff"
                            android:layout_marginTop="10dp"
                            android:weightSum="5">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:gravity="center"
                                android:layout_weight="1">
                                <ImageView
                                    android:layout_width="35dp"
                                    android:layout_height="35dp"
                                    android:src="@drawable/mail"
                                    android:padding="7dp"
                                    />
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:textColor="#0066CC"
                                    android:textSize="11dp"
                                    android:gravity="right|center"
                                    android:text="ارسال بريد"/>
                            </LinearLayout>

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:textColor="#0066CC"
                                android:textSize="13dp"
                                android:layout_weight="4"
                                android:gravity="right|center"
                                android:paddingHorizontal="5dp"
                                android:text="استغلال غير مشروع للسلطة - أياً كانت طبيعته - أو للموارد والأصول المملوكة للمؤسسة أو المخصصة لها"/>

                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/l3"
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:orientation="horizontal"
                            android:background="#ffffff"
                            android:layout_marginTop="10dp"
                            android:weightSum="5">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:gravity="center"
                                android:layout_weight="1">
                                <ImageView
                                    android:layout_width="35dp"
                                    android:layout_height="35dp"
                                    android:src="@drawable/mail"
                                    android:padding="7dp"
                                    />
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:textColor="#0066CC"
                                    android:textSize="11dp"
                                    android:gravity="right|center"
                                    android:text="ارسال بريد"/>
                            </LinearLayout>

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:textColor="#0066CC"
                                android:textSize="13dp"
                                android:layout_weight="4"
                                android:gravity="right|center"
                                android:paddingHorizontal="5dp"
                                android:text="الاخلال بالالتزامات والواجبات الوظيفية"/>

                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/l4"
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:orientation="horizontal"
                            android:background="#ffffff"
                            android:layout_marginTop="10dp"
                            android:weightSum="5">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:gravity="center"
                                android:layout_weight="1">
                                <ImageView
                                    android:layout_width="35dp"
                                    android:layout_height="35dp"
                                    android:src="@drawable/mail"
                                    android:padding="7dp"
                                    />
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:textColor="#0066CC"
                                    android:textSize="11dp"
                                    android:gravity="right|center"
                                    android:text="ارسال بريد"/>
                            </LinearLayout>

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:textColor="#0066CC"
                                android:textSize="13dp"
                                android:layout_weight="4"
                                android:gravity="right|center"
                                android:paddingHorizontal="5dp"
                                android:text="الإيذاء وسوء المعاملة"/>

                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/l5"
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:orientation="horizontal"
                            android:background="#ffffff"
                            android:layout_marginTop="10dp"
                            android:weightSum="5">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:gravity="center"
                                android:layout_weight="1">
                                <ImageView
                                    android:layout_width="35dp"
                                    android:layout_height="35dp"
                                    android:src="@drawable/mail"
                                    android:padding="7dp"
                                    />
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:textColor="#0066CC"
                                    android:textSize="11dp"
                                    android:gravity="right|center"
                                    android:text="ارسال بريد"/>
                            </LinearLayout>

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:textColor="#0066CC"
                                android:textSize="13dp"
                                android:layout_weight="4"
                                android:gravity="right|center"
                                android:paddingHorizontal="5dp"
                                android:text="التصرفات غير الأخلاقية المخالفة للأنظمة أو الأداب العامة"/>

                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/l6"
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:orientation="horizontal"
                            android:background="#ffffff"
                            android:layout_marginTop="10dp"
                            android:weightSum="5">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:gravity="center"
                                android:layout_weight="1">
                                <ImageView
                                    android:layout_width="35dp"
                                    android:layout_height="35dp"
                                    android:src="@drawable/mail"
                                    android:padding="7dp"
                                    />
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:textColor="#0066CC"
                                    android:textSize="11dp"
                                    android:gravity="right|center"
                                    android:text="ارسال بريد"/>
                            </LinearLayout>

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:textColor="#0066CC"
                                android:textSize="13dp"
                                android:layout_weight="4"
                                android:gravity="right|center"
                                android:paddingHorizontal="5dp"
                                android:text="الأضرار التي تلحق بالبيئة والصحة والسلامة"/>

                        </LinearLayout>


                    </LinearLayout>

                    <!--                <TextView-->
                    <!--                    android:id="@+id/back"-->
                    <!--                    android:layout_width="100dp"-->
                    <!--                    android:layout_height="80dp"-->
                    <!--                    android:background="@drawable/down"-->
                    <!--                    />-->


                </LinearLayout>



            </androidx.cardview.widget.CardView>


        </LinearLayout>




    </LinearLayout>


</FrameLayout>