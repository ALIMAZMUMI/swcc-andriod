<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00000000"

    tools:context=".TrainingActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="110dp">




        <androidx.cardview.widget.CardView
            android:id="@+id/idCard"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:background="#ffffff"
            android:elevation="12dp"
            app:cardCornerRadius="10dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="20dp"
                android:gravity="right"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/close"
                    android:descendantFocusability="blocksDescendants"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_gravity="right"
                    android:background="@drawable/close"
                    android:elevation="12dp" />

            </LinearLayout>


            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:background="#05388DCA"
                >


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#00000000"
                    android:orientation="vertical"
                    android:layout_marginTop="30dp"
                    android:paddingTop="10dp">


                    <ImageView
                        android:id="@+id/t0"
                        android:layout_width="match_parent"
                        android:layout_height="250dp"
                        android:layout_marginBottom="50dp"
                        android:src="@drawable/t0" />

                    <ImageView
                        android:id="@+id/t1"

                        android:layout_width="match_parent"
                        android:layout_height="250dp"
                        android:layout_marginBottom="50dp"
                        android:src="@drawable/t1" />

                    <ImageView
                        android:id="@+id/t2"

                        android:layout_width="match_parent"
                        android:layout_height="250dp"
                        android:layout_marginBottom="50dp"
                        android:src="@drawable/t2" />

                    <ImageView
                        android:id="@+id/t3"
                        android:layout_width="match_parent"
                        android:layout_height="250dp"
                        android:layout_marginBottom="50dp"
                        android:src="@drawable/t3" />

                    <ImageView
                        android:id="@+id/t4"
                        android:layout_width="match_parent"
                        android:layout_height="250dp"
                        android:layout_marginBottom="100dp"
                        android:src="@drawable/t4" />

                </LinearLayout>


            </ScrollView>

            </LinearLayout>

        </androidx.cardview.widget.CardView>


    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal"
        android:background="#00000000"
        android:weightSum="3"
        android:layout_alignParentBottom="true"
        >


        <TextView
            android:id="@+id/treaningweb"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="#ffffff"
            android:gravity="center"
            android:layout_margin="10dp"
            android:textSize="15dp"
            android:padding="5dp"
            android:background="@drawable/grayroundfull"
            android:text="مركز التعليم الالكتروني" />
        <TextView
            android:id="@+id/cuntactus"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="#ffffff"
            android:gravity="center"
            android:layout_margin="10dp"
            android:textSize="15dp"
            android:padding="5dp"
            android:background="@drawable/grayroundfull"
            android:text="للتواصل مع الاكاديمية" />
        <TextView
            android:id="@+id/table"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="#ffffff"
            android:gravity="center"
            android:layout_margin="10dp"
            android:textSize="15dp"
            android:padding="5dp"
            android:background="@drawable/grayroundfull"
            android:text="جدول تدريب الاكاديمية" />

    </LinearLayout>
</RelativeLayout>

