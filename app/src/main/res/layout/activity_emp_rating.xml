<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00000000"
    android:orientation="vertical"
    tools:context=".EmpRatingActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:weightSum="7"
        android:background="#004C86">
        <TextView
            android:id="@+id/headertxt"
            android:layout_width="0dp"
            android:layout_weight="6"
            android:textColor="#ffffff"
            android:gravity="center"
            android:paddingLeft="20dp"
            android:textSize="17dp"
            android:layout_height="match_parent"
            android:text=""/>
        <ImageView
            android:id="@+id/backarrow"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:src="@drawable/back_arrow"
            android:padding="20dp"
            />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:elevation="12dp"
            android:id="@+id/idCard"
            app:cardCornerRadius="0dp"
            android:background="#ffffff"
            android:layout_centerHorizontal="true">



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#05388DCA"
                android:paddingHorizontal="20dp"
                android:orientation="vertical">




                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:visibility="gone"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="30dp"
                    android:layout_marginHorizontal="20dp"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/close"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="@drawable/close"
                        android:elevation="12dp"
                        android:layout_gravity="right"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="20dp"
                    android:orientation="vertical"
                    android:gravity="right"
                    android:weightSum="5"
                    android:layout_height="match_parent"
                    >


                    <TextView
                        android:id="@+id/textheader"
                        android:layout_width="match_parent"
                        android:layout_height="29dp"
                        android:textColor="#004C86"
                        android:textSize="16dp"
                        android:gravity="center"
                        android:text="الرجاء تحديد العامل"
                        android:layout_marginBottom="10dp"
                        />


                    <ListView
                        android:id="@+id/projrcts"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_below="@id/header"
                        android:layout_marginHorizontal="10dp"
                        android:background="#FCFCFC"
                        android:divider="@null"
                        android:layout_weight="5"
                        android:dividerHeight="10dp">
                    </ListView>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_marginBottom="50dp"
                        android:layout_height="50dp"
                        >
                        <Button
                            android:id="@+id/back"
                            android:layout_width="wrap_content"
                            android:layout_height="35dp"
                            android:text="الرجوع"
                            android:textColor="#0066CC"
                            android:background="@drawable/blueborder"/>

                        <Button
                            android:id="@+id/submit"
                            android:layout_width="wrap_content"
                            android:layout_height="35dp"
                            android:text="ارسال"
                            android:paddingHorizontal="20dp"
                            android:layout_marginLeft="50dp"
                            android:textColor="#ffffff"
                            android:background="@drawable/blueroundfull"/>


                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>

        </androidx.cardview.widget.CardView>
    </LinearLayout>
</LinearLayout>