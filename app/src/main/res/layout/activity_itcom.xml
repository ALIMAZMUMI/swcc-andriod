<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    tools:context=".ITComActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#00000000"
        android:layout_marginTop="50dp"
        android:layout_gravity="center|bottom"
        android:gravity="center">


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">



        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:elevation="12dp"
            android:layout_marginTop="10dp"
            android:id="@+id/idCard"
            app:cardCornerRadius="10dp"
            android:layout_marginBottom="-15dp"
            android:background="#ffffff"
            android:layout_centerHorizontal="true">





            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingHorizontal="20dp"
                android:weightSum="5"
                android:background="#05388DCA"
                android:gravity="center|bottom">



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/close"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:background="@drawable/close"
                        android:elevation="12dp"
                        android:layout_gravity="right"
                        />

                </LinearLayout>




                    <TextView
                        android:id="@+id/header"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="10dp"
                        android:textSize="15dp"
                        android:textColor="@color/darkblue"
                        android:textStyle="bold"
                        android:text=""
                        android:layout_marginTop="40dp"
                        android:gravity="center|right"/>


                    <!--                    <ImageView-->
<!--                        android:id="@+id/imageView4"-->
<!--                        android:padding="7dp"-->
<!--                        android:layout_width="50dp"-->
<!--                        android:layout_height="50dp"-->
<!--                        app:srcCompat="@drawable/it"-->
<!--                        />-->

<!--                <TextView-->
<!--                    android:layout_width="match_parent"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:padding="5dp"-->
<!--                    android:background="@drawable/blueroundfull"-->
<!--                    android:textColor="#ffffff"-->
<!--                    android:textSize="20dp"-->
<!--                    android:textStyle="bold"-->
<!--                    android:text="تذكرة دعم الاجهزة و التطبيقات"-->
<!--                    android:layout_marginTop="10dp"-->
<!--                    android:gravity="center"/>-->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginTop="5dp"
                    android:layout_weight="5"
                    android:weightSum="7"
                    android:orientation="vertical">






                    <TextView
                        android:id="@+id/textView7"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#004C86"
                        android:gravity="center|right"
                        android:textSize="15dp"
                        android:layout_marginTop="30dp"
                        android:layout_marginBottom="10dp"
                        android:text="عنوان الطلب" />
                    <EditText
                        android:id="@+id/title"
                        android:layout_width="match_parent"
                        android:layout_height="37dp"
                        android:ems="10"
                        android:inputType="text"
                        android:textColor="#0066CC"
                        android:textSize="14dp"
                        android:paddingHorizontal="10dp"
                        android:hint="ادخل عنوان الطلب"
                        android:gravity="right|center"
                        android:background="@drawable/blueborder"
                        android:text=""
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#004C86"
                        android:gravity="center|right"
                        android:textSize="15dp"
                        android:layout_marginTop="30dp"
                        android:layout_marginBottom="10dp"
                        android:text="وصف الطلب"
                        />
                    <EditText
                        android:id="@+id/detials"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="2"
                        android:maxHeight="100dp"
                        android:textSize="14dp"
                        android:adjustViewBounds="true"
                        android:ems="10"
                        android:inputType="textMultiLine"
                        android:textColor="#0066CC"
                        android:background="@drawable/blueborder"
                        android:text=""
                        android:gravity="top|right"
                        android:padding="10dp"
                        android:hint="ادخل وصف الطلب"/>

                    <Button
                        android:id="@+id/submit"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginHorizontal="30dp"
                        android:background="@drawable/grayroundbtn"
                        android:text="ارسال"
                        android:textSize="14dp"
                        android:layout_marginTop="15dp"
                        android:layout_gravity="center"
                        android:textColor="#ffffff"/>
                </LinearLayout>

<!--                <TextView-->
<!--                    android:id="@+id/back"-->
<!--                    android:layout_width="120dp"-->
<!--                    android:layout_height="100dp"-->
